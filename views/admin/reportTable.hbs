    <h2 style="text-align:center;">Sales Report</h2>
<table id="example" class="display nowrap" style="width: 80%;">
        <thead style="background-color:rgb(122, 144, 144) ;">
            <tr>
                <th>No.</th>
                <th>Name</th>
                <th>Product</th>
                <th>Quatity</th>
                <th>TotalPrice</th>
                <th>Payment Method</th>
                <th>Payment Status</th>
                <th>Delivery Status</th>
                <th>Date of Order</th>
                
            </tr>
        </thead>
        <tbody style="background-color:azure ;">
            {{#each orders}}
            <tr>
                <td>{{add @index 1}}</td>
                <td>{{this.deliveryAddress.name}}</td>
                <td>{{#each this.products}}{{this.productId.productname}}<br><br> {{/each}}</td>
                <td>{{#each this.products}}{{this.quantity}}<br> <br> {{/each}}</td>
                <td>{{this.totalAmount}}</td>
                <td>{{this.paymentMethod}}</td>
                <td>{{this.deliveryStatus}}</td>
                <td>{{this.productStatus}}</td>
                <td>{{format this.createdAt}}</td>

            </tr>
            {{/each}}
            
        </tbody>
