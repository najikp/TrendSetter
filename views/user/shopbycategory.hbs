        <script>
            const addtocart = async (id) => {
                const res = await axios.post(`/addtocart/${id}`, {}).then((e) => {
                   
                    swal({ title: "Item Added!", text: "Item Added to Cart!", icon: "success", button:false })
                })
                setTimeout(()=>{
                    location.reload()
                },700)
            }
        </script>

        <script>
            const toWishlist = async (id) => {
                const res = await axios.post(`/toWishlist/${id}`, {}).then((e) => {
                    
                    swal({ title: "Item Added!", text: "Item Added to Wishlist!", icon: "success", button:false })
                    setTimeout(()=>{
