    <script>
    const deletecart= async (id) =>{
        const res = await axios.post(`/deletecart/${id}`,{}).then((e)=>{
            toastr.options={"positionClass": "toast-bottom-right",
            "debug": false,
            "onclick": null,
            "fadeIn": 300,
            "fadeOut": 1000,
            "timeOut": 2000,
            "extendedTimeOut": 1000,}
            toastr.error('Item Removed...');
    setTimeout(()=>{
        location.reload()
    },600)
        })
    }
    </script>


    <script>
        const decQty=(id)=>{
            const res = axios.post(`/decQty/${id}`,{}).then((e)=>{
                e.data.response;
                document.getElementById(id).innerHTML=e.data.quantity;
            })
                window.location.reload()
        }

        const incQty=(id)=>{
            const res=axios.post(`/incQty/${id}`,{}).then((e)=>{
                e.data.response;
                document.getElementById(id).innerHTML=e.data.quantity;
            })
                window.location.reload()
        }
    </script>


